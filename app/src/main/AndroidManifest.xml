<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.choicely.csvcompanion"
    >

    <application
        android:name=".app.CSVCompanionApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CSVCompanion"
        >
        <activity android:name=".FirebaseUIActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".home.LibraryHomeActivity"/>
        <activity android:name=".library_content.LibraryActivity"/>
        <activity android:name=".EditTranslationActivity"
            android:windowSoftInputMode="adjustResize"/>
    </application>

</manifest>