<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        >

        <EditText
            android:id="@+id/edit_translation_act_translation_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/edit_translation_act_translation_desc"
            android:layout_marginHorizontal="32dp"
            android:hint="@string/translation_name"
            android:maxLines="1"
            />

        <EditText
            android:id="@+id/edit_translation_act_translation_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/edit_translation_act_android_key"
            android:layout_centerVertical="true"
            android:layout_margin="12dp"
            android:hint="@string/translation_description"
            android:lines="5"
            android:maxLines="5"
            />

        <EditText
            android:id="@+id/edit_translation_act_android_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/edit_translation_act_ios_key"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp"
            android:hint="@string/android_key"
            />

        <EditText
            android:id="@+id/edit_translation_act_ios_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/edit_translation_act_web_key"
            android:layout_marginHorizontal="32dp"
            android:hint="@string/ios_key"
            />

        <EditText
            android:id="@+id/edit_translation_act_web_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/edit_translation_act_dropdown_combo"
            android:layout_marginHorizontal="32dp"
            android:hint="@string/web_key"
            />

        <LinearLayout
            android:id="@+id/edit_translation_act_dropdown_combo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/edit_translation_act_write_translation"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <Spinner
                android:id="@+id/edit_translation_act_language_dropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:outlineAmbientShadowColor="@color/black"
                />

            <View
                android:id="@+id/edit_translation_act_spinner_underline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#808080"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/edit_translation_act_write_translation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="30dp"
            android:hint="@string/translation"
            />

    </RelativeLayout>
</ScrollView>