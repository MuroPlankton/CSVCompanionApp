<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/edit_translation_act_another_translation_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="@string/add_another_translation"
        android:textSize="12sp"
        android:layout_margin="8dp"
        />

    <EditText
        android:id="@+id/edit_translation_act_translation_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_above="@id/edit_translation_act_translation_desc"
        android:hint="@string/translation_name"
        android:maxLines="1"
        />

    <!--        android:background="@drawable/edit_text_borders"-->

    <EditText
        android:id="@+id/edit_translation_act_translation_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="5"
        android:maxLines="5"
        android:layout_margin="12dp"
        android:layout_centerVertical="true"
        android:hint="@string/translation_description"
        android:layout_above="@id/edit_translation_act_android_key"
        />

    <EditText
        android:id="@+id/edit_translation_act_android_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:layout_above="@id/edit_translation_act_ios_key"
        android:hint="@string/android_key"
        />

    <EditText
        android:id="@+id/edit_translation_act_ios_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_above="@id/edit_translation_act_web_key"
        android:hint="@string/ios_key"
        />

    <EditText
        android:id="@+id/edit_translation_act_web_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_above="@id/edit_translation_act_language_dropdown"
        android:hint="@string/web_key"
        />

    <Spinner
        android:id="@+id/edit_translation_act_language_dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_above="@id/edit_translation_act_write_translation"
        />

    <EditText
        android:id="@+id/edit_translation_act_write_translation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_above="@id/edit_translation_act_submit_translation"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="30dp"
        android:hint="@string/translation"
        />

    <Button
        android:id="@+id/edit_translation_act_submit_translation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="@string/submit_translation"
        />




</RelativeLayout>