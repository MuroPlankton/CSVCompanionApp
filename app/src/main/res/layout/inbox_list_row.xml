<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/inbox_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="100"
        android:maxLines="4"
        android:textSize="16sp"
        tools:text="User x has sent you a library Y"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/inbox_text_view_custom_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="100"
        android:maxLines="4"
        android:textSize="14sp"
        tools:text="User x has sent you a library Y"
        android:layout_margin="8dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/inbox_check_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/fui_transparent"
            android:src="@drawable/ic_baseline_check_24"
            />

        <ImageButton
            android:id="@+id/inbox_close_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/fui_transparent"
            android:src="@drawable/ic_outline_close_24"
            />

    </LinearLayout>

</LinearLayout>